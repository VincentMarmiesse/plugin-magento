<?php
$is_new_merchant = Mage::helper('lengow_connector/sync')->isNewMerchant();
$is_sync = Mage::app()->getRequest()->getParam('isSync');
$is_status = Mage::helper('lengow_connector/sync')->getStatusAccount();
if ($is_new_merchant || $is_sync) {
    echo $this->getChildHtml("lengow_new");
    echo '<input type="hidden" id="lengow_sync_link" value="'.$is_sync.'">';
} elseif (($is_status['type'] == 'free_trial' && $is_status['day'] == 0) || ($is_status['type'] == 'bad_payer')) {
    echo $this->getChildHtml("lengow_status");
} else {
    echo $this->getChildHtml("lengow_header");
    echo $this->getChildHtml("lengow_dashboard");
}
echo $this->getChildHtml("lengow_footer");

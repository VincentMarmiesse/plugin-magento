<?xml version="1.0"?>
<config>
    <modules>
        <Lengow_Connector>
            <version>3.0.0</version>
        </Lengow_Connector>
    </modules>
    <frontend>
        <routers>
            <lengow>
                <use>standard</use>
                <args>
                    <module>Lengow_Connector</module>
                    <frontName>lengow</frontName>
                </args>
            </lengow>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <lengow_connector before="Mage_Adminhtml">Lengow_Connector_Adminhtml</lengow_connector>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <!--<admin>
      <routers>
        <lengow>
          <use>admin</use>
          <args>
            <module>Lengow_Connector</module>
            <frontName>lengow</frontName>
          </args>
        </lengow>
        <adminhtml>
          <args>
            <modules>
              <Lengow_Connector before="Mage_Adminhtml">Lengow_Connector_Adminhtml</Lengow_Connector>
            </modules>
          </args>
        </adminhtml>
      </routers>
    </admin>-->
    <global>
        <models>
            <lengow>
                <class>Lengow_Connector_Model</class>
                <resourceModel>lengow_resource</resourceModel>
            </lengow>
            <lengow_resource>
                <class>Lengow_Connector_Model_Resource</class>
                <entities>
                    <order>
                        <table>lengow_order</table>
                    </order>
                    <orderline>
                        <table>lengow_order_line</table>
                    </orderline>
                    <ordererror>
                        <table>lengow_order_error</table>
                    </ordererror>
                    <action>
                        <table>lengow_action</table>
                    </action>
                    <log>
                        <table>lengow_log</table>
                    </log>
                </entities>
            </lengow_resource>
        </models>
        <resources>
            <lengow_setup>
                <setup>
                    <module>Lengow_Connector</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </lengow_setup>
        </resources>
        <blocks>
            <lengow>
                <class>Lengow_Connector_Block</class>
            </lengow>
        </blocks>
        <helpers>
            <lengow_connector>
                <class>Lengow_Connector_Helper</class>
            </lengow_connector>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <lengow_export_options>
                                            <title>Lengow Export Feed Configuration</title>
                                        </lengow_export_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <lengow_connector>
                    <file>lengow.xml</file>
                </lengow_connector>
            </updates>
        </layout>
        <events>
            <controller_action_layout_render_before>
                <observers>
                    <module_update_admin_menu>
                        <class>Lengow_Connector_Model_Observer</class>
                        <method>updateAdminMenu</method>
                    </module_update_admin_menu>
                </observers>
            </controller_action_layout_render_before>
        </events>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <Lengow_Connector/>
            </modules>
            <fixture>
                <lengow_log>lengow/lengow_log</lengow_log>
            </fixture>
        </suite>
    </phpunit>
    <default>
        <lengow_export>
            <global>
                <active_store>0</active_store>
                <export_only_selected>0</export_only_selected>
                <autoexport_newproduct>0</autoexport_newproduct>
                <export_soldout>0</export_soldout>
                <producttype>simple,configurable</producttype>
                <productstatus></productstatus>
            </global>
            <data>
                <format>csv</format>
                <count_images>5</count_images>
                <parentsimages>0</parentsimages>
                <levelcategory>5</levelcategory>
                <without_product_ordering>0</without_product_ordering>
                <formatdata>0</formatdata>
                <html_attribute>0</html_attribute>
                <shipping_price_based_on>FR</shipping_price_based_on>
                <default_shipping_price></default_shipping_price>
                <default_shipping_method>flatrate_flatrate</default_shipping_method>
                <default_shipping_delay>2</default_shipping_delay>
            </data>
            <attributelist>
                <attributes>0</attributes>
            </attributelist>
            <performances>
                <valid_ip></valid_ip>
                <optimizeexport>1</optimizeexport>
                <usesavefile>0</usesavefile>
                <active_cron>0</active_cron>
            </performances>
        </lengow_export>
    </default>
</config>
